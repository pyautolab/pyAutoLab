{
    "configuration": {
        "Workspace": {
            "workspace.welcomeTab": {
                "description": "Display Welcome tab or not.",
                "type": "boolean",
                "default": true
            }
        },
        "System": {
            "system.theme": {
                "description": "Specifies the color theme used in the window.",
                "type": "string",
                "default": "auto",
                "enum": [
                    "auto",
                    "dark",
                    "light"
                ]
            }
        },
        "Runner": {
            "runner.console.maximumNumberOfLine": {
                "description": "Control maximum number of lines in the console of the Analysis Window.",
                "type": "integer",
                "default": 100,
                "minimum": 1,
                "maximum": 100000
            },
            "runner.graph.antialias": {
                "description": "Enable or disable graph antialias.",
                "type": "boolean",
                "default": false
            },
            "runner.graph.lineWidth": {
                "description": "Control line width of graph.",
                "type": "integer",
                "default": 1,
                "minimum": 1,
                "maximum": 5
            }
        },
        "Communication Monitor": {
            "communicationMonitor.maximumNumberOfLine": {
                "description": "Control maximum number of lines in the console of communication monitor.",
                "type": "integer",
                "default": 1000,
                "minimum": 1,
                "maximum": 100000
            }
        }
    },
    "runConfiguration": {
        "saveToFile": true,
        "saveFilePath": "",
        "mode": "control and measure",
        "showGraph": true,
        "measuringInterval": 100,
        "continuous": true,
        "numberOfMeasuringTimes": 100
    }
}